<p id="notice"><%= notice %></p>

<h1>Collectibles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Collection</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collectibles.each do |collectible| %>
      <tr>
        <td><%= collectible.name %></td>
        <td><%= collectible.description %></td>
        <td><%= collectible.collection.name %></td>
        <td><%= link_to 'Show', collectible %></td>
        <td><%= link_to 'Edit', edit_collectible_path(collectible) %></td>
        <td><%= link_to 'Destroy', collectible, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Collectible', new_collectible_path %>
<%= link_to 'New Collection', new_collection_path %>

